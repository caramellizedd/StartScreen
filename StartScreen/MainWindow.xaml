<Window x:Class="StartScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:StartScreen"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Closing="mainWindow_Closing"
        Deactivated="mainWindow_Deactivated"
        Keyboard.KeyDown="Grid_KeyDown"
        Background="#55000000"
        Title="MainWindow" Height="768" Width="1280" x:Name="mainWindow">
    <Grid>
        <Image x:Name="imageBackground"/>
        <ui:Frame x:Name="content"/>
        <Menu/>

    </Grid>
</Window>
